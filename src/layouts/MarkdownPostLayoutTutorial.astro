---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>
  <section class="tutorials">
    <slot />
  </section>
</BaseLayout>

<style>
  .tutorials{
    padding-bottom: 265px;
    max-width: 48rem;
    margin-left: auto;
    margin-right: auto;
    font-size: 1rem;

    & h3 {
      background-color: var(--primary-red);
      padding: 30px 30px;
      margin-top: 50px;
      color: white;
      width:100%;
      border-radius: 8px;
      font-weight: 600;
    }

    & h3:first-of-type{
      margin-top: 20px;
    }

    & img, video {
    max-width: 100%;
    height: auto;
    display: block;
    padding: 20px 0px;
    }
  } 
</style>